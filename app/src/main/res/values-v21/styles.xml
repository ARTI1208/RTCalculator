<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.RT.AppTheme.Light" parent="Base.RT.v21.AppTheme.Light" />

    <style name="Base.RT.v21.AppTheme.Light" parent="Base.RT.v18.AppTheme.Light">
        <item name="changelogBackground">@drawable/changelog_background</item>
        <item name="authorAvatarBackground">@drawable/author_avatar_background</item>
        <item name="bottomSheetDialogTheme">@style/RT.Design.BottomSheetDialog</item>
        <item name="android:statusBarColor">@color/LightTheme_lollipopStatusBackgroundTransparent</item>
        <item name="android:navigationBarColor">@color/LightTheme_lollipopStatusBackground</item>
    </style>

    <style name="Base.RT.AppTheme.Dark" parent="Base.RT.v21.AppTheme.Dark" />

    <style name="Base.RT.v21.AppTheme.Dark" parent="Base.RT.v18.AppTheme.Dark">
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="changelogBackground">@drawable/changelog_background</item>
        <item name="authorAvatarBackground">@drawable/author_avatar_background</item>
        <item name="bottomSheetDialogTheme">@style/RT.Design.BottomSheetDialog.Dark</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <style name="Base.RT.AppTheme.Black" parent="Base.RT.v21.AppTheme.Black" />

    <style name="Base.RT.v21.AppTheme.Black" parent="Base.RT.v18.AppTheme.Black">
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="changelogBackground">@drawable/changelog_background</item>
        <item name="authorAvatarBackground">@drawable/author_avatar_background</item>
        <item name="bottomSheetDialogTheme">@style/RT.Design.BottomSheetDialog.Black</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <style name="RT.AppTheme.Battery" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.BatteryBlack" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.System" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.SystemBlack" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.Launch" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>

    <style name="Base.RT.v21.Design.BottomSheetDialog" parent="Base.RT.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RT.Design.BottomSheetDialog" parent="Base.RT.v21.Design.BottomSheetDialog" />

    <style name="RT.Design.BottomSheetDialog.Dark" parent="Base.RT.v21.Design.BottomSheetDialog">
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

    <style name="RT.Design.BottomSheetDialog.Black" parent="Base.RT.v21.Design.BottomSheetDialog">
        <item name="android:navigationBarColor">?colorSurface</item>
    </style>

</resources>