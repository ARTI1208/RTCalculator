    <style name="RT.Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1.0</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="RT.Widget.Snackbar.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>

    <style name="RT.Widget.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabIndicator">@drawable/tab_rounded_line_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/RT.TextAppearance.Tab</item>
        <item name="tabIconTint">@color/tab_icon_text_color_selector</item>
        <item name="tabIndicatorColor">?colorSecondary</item>
        <item name="tabRippleColor">@color/tab_ripple_color_selector</item>
        <item name="tabTextColor">@color/tab_icon_text_color_selector</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="RT.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?colorSecondary</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="RT.Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="itemIconTint">@color/navigation_tint</item>
        <item name="itemTextColor">@color/navigation_tint</item>
        <item name="itemRippleColor">@color/tab_ripple_color_selector</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

