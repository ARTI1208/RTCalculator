        <item name="textAllCaps">false</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="Base.RT.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center|center</item>
        <item name="android:layout_gravity">center|center</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">#00000000</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
