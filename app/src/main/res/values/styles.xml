<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.RT.v18.AppTheme.Light" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/LightTheme_colorPrimary</item>
        <item name="android:windowBackground">@color/LightTheme_colorPrimary</item>
        <item name="colorPrimary">@color/LightTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/LightTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/LightTheme_colorAccent</item>
        <item name="colorAccentTransparent">@color/LightTheme_colorAccentTransparent</item>
        <item name="calc_input_bg">@color/LightTheme_inputBackground</item>
        <item name="btn_text_color">@color/LightTheme_buttonTextColor</item>
        <item name="preferenceTheme">@style/RT.PreferenceTheme</item>
        <item name="toolbarStyle">@style/RT.Widget.Toolbar</item>
        <item name="tabStyle">@style/RT.Widget.TabLayout</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back</item>
        <item name="buttonBarButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/RT.Widget.ButtonBar.TextButton.Neutral</item>
        <item name="snackbarStyle">@style/RT.Widget.Snackbar</item>
        <item name="snackbarButtonStyle">@style/RT.Widget.Snackbar.TextButton</item>
        <item name="floatingBottomBarBackground">@color/LightTheme_floatingBottomBarBackground</item>
        <item name="strokeColor">@color/LightTheme_strokeColor</item>
        <item name="android:listViewStyle">@style/RT.Widget.ListView.TopIndicator</item>
        <item name="android:scrollViewStyle">@style/RT.Widget.ScrollView.TopIndicator</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
    </style>

    <style name="Base.RT.AppTheme.Light" parent="Base.RT.v18.AppTheme.Light" />

    <style name="Base.RT.v18.AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/DarkTheme_colorPrimary</item>
        <item name="android:windowBackground">@color/DarkTheme_colorPrimary</item>
        <item name="colorPrimary">@color/DarkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/DarkTheme_colorAccent</item>
        <item name="colorAccentTransparent">@color/DarkTheme_colorAccentTransparent</item>
        <item name="calc_input_bg">@color/DarkTheme_inputBackground</item>
        <item name="btn_text_color">@color/DarkTheme_buttonTextColor</item>
        <item name="preferenceTheme">@style/RT.PreferenceTheme</item>
        <item name="toolbarStyle">@style/RT.Widget.Toolbar</item>
        <item name="tabStyle">@style/RT.Widget.TabLayout</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back</item>
        <item name="buttonBarButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/RT.Widget.ButtonBar.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/RT.Widget.ButtonBar.TextButton.Neutral</item>
        <item name="snackbarStyle">@style/RT.Widget.Snackbar</item>
        <item name="snackbarButtonStyle">@style/RT.Widget.Snackbar.TextButton</item>
        <item name="floatingBottomBarBackground">@color/DarkTheme_floatingBottomBarBackground</item>
        <item name="strokeColor">@color/DarkTheme_strokeColor</item>
        <item name="android:listViewStyle">@style/RT.Widget.ListView.TopIndicator</item>
        <item name="android:scrollViewStyle">@style/RT.Widget.ScrollView.TopIndicator</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
    </style>

    <style name="Base.RT.AppTheme.Dark" parent="Base.RT.v18.AppTheme.Dark" />

    <style name="Base.RT.TextAppearance.Tab" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/tab_icon_text_color_selector</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="Base.RT.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center|center</item>
        <item name="android:layout_gravity">center|center</item>
        <item name="android:textColor">?btn_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="RT.AppTheme.Battery" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.Dark" parent="Base.RT.AppTheme.Dark" />

    <style name="RT.AppTheme.DayNight" parent="RT.AppTheme.Light" />

    <style name="RT.AppTheme.Launch" parent="Theme.AppCompat.Light" />

    <style name="RT.AppTheme.Light" parent="Base.RT.AppTheme.Light" />

    <style name="RT.AppTheme.System" parent="RT.AppTheme.Light" />

    <style name="RT.PreferenceTheme" parent="PreferenceThemeOverlay.v14" />

    <style name="RT.TextAppearance.PreferenceCategory" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RT.TextAppearance.Tab" parent="Base.RT.TextAppearance.Tab" />

    <style name="RT.Widget.Button" parent="Base.RT.Widget.Button">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="enforceMaterialTheme">false</item>
    </style>

    <style name="RT.Widget.ButtonBar.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="rippleColor">?colorAccentTransparent</item>
    </style>

    <style name="RT.Widget.ButtonBar.TextButton.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="rippleColor">?colorAccentTransparent</item>
    </style>

    <style name="RT.Widget.ListView.TopIndicator" parent="@style/Widget.AppCompat.ListView"/>

    <style name="RT.Widget.ListView.VerticalIndicators" parent="@style/Widget.AppCompat.ListView"/>

    <style name="RT.Widget.ScrollView.TopIndicator" parent="@android:style/Widget.ScrollView"/>

    <style name="RT.Widget.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1.0</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="RT.Widget.Snackbar.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="rippleColor">?colorAccentTransparent</item>
    </style>

    <style name="RT.Widget.TabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/tab_rounded_line_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/RT.TextAppearance.Tab</item>
        <item name="tabIconTint">@color/tab_icon_text_color_selector</item>
        <item name="tabIndicatorColor">?colorAccent</item>
        <item name="tabRippleColor">@color/tab_ripple_color_selector</item>
        <item name="tabTextColor">@color/tab_icon_text_color_selector</item>
        <item name="tabUnboundedRipple">true</item>
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="RT.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?colorAccent</item>
        <item name="colorControlNormal">?colorAccent</item>
        <item name="android:background">?colorPrimary</item>
    </style>

</resources>
