<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="RT.Widget.ButtonBar.TextButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>

    <style name="RT.Widget.ButtonBar.TextButton.Neutral" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>

    <style name="RT.Widget.ScrollView.TopIndicator" parent="RT.Base.Widget.ScrollView.TopIndicator" />

    <style name="RT.Base.Widget.ScrollView.TopIndicator" parent="@android:style/Widget.ScrollView" />

    <style name="RT.Widget.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="actionTextColorAlpha">1.0</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="backgroundTint">?colorSurfaceVariant</item>
    </style>

    <style name="RT.Widget.Snackbar.TextButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>

    <style name="RT.Widget.Toolbar" parent="Widget.Material3.Toolbar.Surface">
    </style>

    <style name="Widget.RT.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RT.BottomSheet</item>
        <item name="android:elevation" tools:ignore="NewApi,PrivateResource">@dimen/m3_sys_elevation_level0</item>
    </style>

    <style name="RT.Design.BottomSheetDialog" parent="RT.v21.Design.BottomSheetDialog" />

    <style name="RT.Design.BottomSheetDialog.Dark" parent="RT.v21.Design.BottomSheetDialog">
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorSurface</item>
    </style>

    <style name="RT.Design.BottomSheetDialog.Black" parent="RT.Design.BottomSheetDialog.Dark">
    </style>

    <style name="RT.v21.Design.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.RT.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.RT.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.RT.BottomNavigationView" parent="Widget.Material3.BottomNavigationView" />

    <style name="Widget.RT.BottomNavigationView.Dark" parent="Widget.Material3.BottomNavigationView" />

    <style name="Widget.RT.BottomNavigationView.Black" parent="Widget.Material3.BottomNavigationView">
        <!-- ensure bottom navigation background won't be changed because of elevation -->
        <item name="elevation">0dp</item>
    </style>

</resources>